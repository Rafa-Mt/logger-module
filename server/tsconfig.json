{
    "compilerOptions": {
        "target": "ESNext", 
        "module": "NodeNext", 
        "rootDir": "./src", 
        "outDir": "./dist", 
        "strict": true, 
        "declaration": true,
        "esModuleInterop": true, 
        "baseUrl": "./", 
        "paths": {
            "@/*": ["src/*.ts"], 
            "@common/*": ["../common/*.ts"]
        }
    },
    "include": ["src"], 
    "exclude": ["node_modules", "dist"] 
}